<% layout('layouts/boilerplate.ejs') -%>
<body>
        <form action="/listings/<%=listing._id%>/update?_method=PUT" method="POST" >
            <label for="name">Name</label>
            <input type="text" id="name" name="listing[name]" value="<%=listing.name%>">
            <br>
            <label for="price">Price</label>
            <input type="number" id="price" name="listing[price]" value="<%=listing.price%>">
            <br>
            <label for="description">Description</label>
            <textarea name="listing[description]" id="description" cols="30" rows="10"><%=listing.description%></textarea>
            <br>
            <button>Submit</button>

        </form>
</body>
