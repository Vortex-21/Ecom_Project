<%-layout("layouts/boilerplate.ejs")%>
<style>
  .signup-details {
    margin-bottom: 2rem;
  }
  .signup-container{
    border:3px solid rgb(246, 126, 126);
    
    border-radius:10px;
  }
  .update-form{
    padding:1rem;
  }
  .form-control{
    border:1px solid rgba(0, 0, 0, 0.337)!important;
  }
</style>
<div class="mt-2">

    <h1>Edit Your Details</h1>
</div>
<div class="signup-container">
  <form
    action="/customers/<%=currUser.id%>/update"
    method="POST"
    novalidate
    class="needs-validation update-form"
  >
    <div class="signup-details mt-2">
      <label for="username" class="form-label">Update username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
        value="<%=currUser.username%>"
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="email" class="form-label">Update email id</label>
      <input
        type="text"
        name="email"
        id="email"
        class="form-control"
        required
        value="<%=currUser.email%>"
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="phn" class="form-label">Update Phone Number</label>
      <input
        type="text"
        name="phn"
        id="phn"
        class="form-control"
        required
        value="<%=currUser.phoneNumber%>"
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>





    <div class="signup-details">
      <label for="address" class="form-label">Add Address</label>
      <input
        type="text"
        name="address"
        id="address"
        class="form-control"
        required
        value="<%=currUser.addresses[0]%>"
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>

    <button class="btn btn-outline-dark mb-3">Save Changes</button>
  </form>
</div>
<script src="/js/validation.js"></script>
