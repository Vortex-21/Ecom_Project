<%-layout("layouts/boilerplate.ejs")%>
<style>
  .signup-details {
    margin-bottom: 2rem;
  }
  .signup-container{
    border:3px solid rgb(246, 126, 126);
    
    border-radius:10px;
  }
  .signup-form{
    padding:1rem;
  }
  .form-control{
    border:1px solid rgba(0, 0, 0, 0.337)!important;
  }
</style>
<div class="mt-2">

    <h1>Sign Up on NPRINT</h1>
</div>
<div class="signup-container">
  <form
    action="/customers/signUp"
    method="POST"
    novalidate
    class="needs-validation signup-form"
  >
    <div class="signup-details mt-2">
      <label for="username" class="form-label">Enter username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="email" class="form-label">Enter email-id</label>
      <input
        type="text"
        name="email"
        id="email"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="phn" class="form-label">Enter Phone Number</label>
      <input
        type="text"
        name="phn"
        id="phn"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="password" class="form-label">Enter a password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    <div class="signup-details">
      <label for="address" class="form-label">Enter your address</label>
      <input
        type="text"
        name="address"
        id="address"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>

    <button class="btn btn-outline-dark mb-3">Sign Up</button>
  </form>
</div>
<script src="/js/validation.js"></script>
