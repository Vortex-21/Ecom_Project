<%-layout("layouts/boilerplate.ejs")%>
<style>
  .login-details {
    margin-bottom: 2rem;
  }
  .login-container{
    border:3px solid rgb(246, 126, 126);
    margin:auto;
    border-radius:10px;
    width:fit-content;
  }
  .login-form{
    padding:1rem;
    
  }
  
  .form-control{
    border:1px solid rgba(0, 0, 0, 0.337)!important;
  }
  .signup-link{
    margin-left:1rem;
  }
</style>
<div class=" mt-2">
  <h1>Login</h1>
</div>
<div class="login-container">
  <form
    action="/customers/login"
    method="POST"
    novalidate
    class="login-form needs-validation "
  >
    <div class="login-details mt-2">
      <label for="username" class="form-label">Enter  username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    


    


    <div class="login-details">
      <label for="password" class="form-label">Enter password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks Good!</div>
      <div class="invalid-feedback">Please Fill out this field.</div>
    </div>


    

    <button class="btn btn-outline-dark mb-3">Login</button>
    <a href="/customers/signUp" class="signup-link">Or Sign Up</a>
    &nbsp;
    <a href="/forgotPassword">Forgot Password?</a>
  </form>
</div>
<script src="/js/validation.js"></script>
